{
    "name": "sevenpointsix/ctrl",
    "description": "A very early version of a CMS. Not intended for public or general use.",
    "require": {
        "php": ">=7.2",
        "laravel/framework": "6.*|7.*|8.*",
        "yajra/laravel-datatables-oracle": "~9.0",
        "maatwebsite/excel": "^3.1.0",
        "sunra/php-simple-html-dom-parser": "1.5.2",
	    "venturecraft/revisionable": "1.*",
        "intervention/image": "^2.3",
        "kub-at/php-simple-html-dom-parser": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Sevenpointsix\\Ctrl\\": "src"
        }
    },
    "scripts": {
        "post-package-update": [
            "php artisan vendor:publish --tag=config --provider=\"App\\Providers\\CtrlServiceProvider\"",
            "php artisan vendor:publish --tag=public --force --provider=\"App\\Providers\\CtrlServiceProvider\""
        ],
        "post-package-install": [
            "php artisan vendor:publish --tag=config --provider=\"App\\Providers\\CtrlServiceProvider\"",
            "php artisan vendor:publish --tag=public --force --provider=\"App\\Providers\\CtrlServiceProvider\""
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sevenpointsix\\Ctrl\\CtrlServiceProvider"
            ]
        }
    }
}
